pipeline {
agent none
    environment {
        HOME = '/tmp'
        APP_NAME = "dotnet-comparison-same-app"
        APP_PORT = "5000"
        IMAGE_TAG = "2.0"
        DOCKER_REGISTRY="localhost:5000"
        DOCKER_USERNAME="memariyachirag126"
        DOCKER_PASSWORD="dckr_pat_u0F_btR1cPtN1Z6gIa2ewM7ptY4"
        }
    stages {
        stage('Build Test Publish') {
            agent {
                docker { image 'mcr.microsoft.com/dotnet/sdk:6.0' }
            }
            steps {
                // Build the project
                echo 'Building a Image'
                sh 'dotnet build'

                // test the project
                echo 'Test a Project'
                sh 'dotnet test'

                // Publish the project
                echo 'Publishing a dotnet app'
                sh 'dotnet publish -c Release -o ./publish'
            }
        }

        stage('Build & Push docker image') {
            agent any
            steps {  
                sh 'docker build -t ${DOCKER_REGISTRY}/${APP_NAME}:${IMAGE_TAG} .'
                echo '# Push the image to the local registry'
                sh 'docker push ${DOCKER_REGISTRY}/${APP_NAME}:${IMAGE_TAG}'
            }
        }
    }
}
