pipeline {
    agent {
        docker { image 'mcr.microsoft.com/dotnet/sdk:6.0' }
    }
    environment {
        HOME = '/tmp'
        APP_NAME = "unit-testing-asp-dotnet-core-gitlav-vs-jenkins"
        APP_PORT = "5000"
        IMAGE_TAG = "latest"
        DOCKER_REGISTRY="memariyachirag126"
        DOCKER_USERNAME="memariyachirag126"
        DOCKER_PASSWORD="dckr_pat_QUWempv4V6X7lbUR-UU83Y0lIdo"
        }
    stages {
        stage('Build and Publish') {
            steps {
                // Restore dependencies, build the app, and publish it
                bat 'msbuild /t:Restore'
                bat 'msbuild /t:Build'
                bat 'msbuild /t:Publish /p:Configuration=Release /p:DeployOnBuild=true /p:PublishProfile=YourPublishProfile.pubxml'
            }
        }
    }
}
