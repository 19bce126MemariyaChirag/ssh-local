pipeline {
    environment {
        HOME = '/tmp'
        APP_NAME = "unit-testing-asp-dotnet-core-gitlav-vs-jenkins"
        APP_PORT = "5000"
        IMAGE_TAG = "latest"
        DOCKER_REGISTRY="memariyachirag126"
        DOCKER_USERNAME="memariyachirag126"
        DOCKER_PASSWORD="dckr_pat_QUWempv4V6X7lbUR-UU83Y0lIdo"
        }
    stages {
        stage('Check Version of .NET') {
        agent {
        docker { image 'mcr.microsoft.com/dotnet/sdk:6.0' }
    }
            steps {
                sh 'dotnet --version'
            }
        }
        stage('Build') {
        agent {
        docker { image 'mcr.microsoft.com/dotnet/sdk:6.0' }
    }
            steps {
                // Build the project
                sh 'dotnet build'
            }
        }
        stage('test') {
        agent {
        docker { image 'mcr.microsoft.com/dotnet/sdk:6.0' }
    }
            steps {
                // test the project
                sh 'dotnet test'
            }
        }
        stage('pulbish'){
        agent {
        docker { image 'mcr.microsoft.com/dotnet/sdk:6.0' }
    }
            steps{
                // Publish the project
                sh 'dotnet publish -c Release -o ./publish'
            }
        }
        stage('Build docker image') {
        agent any
            steps {  
                sh 'docker build -t memariyachirag126/dotnet-same-app:1.0 .'
            }
        }
    }
}
